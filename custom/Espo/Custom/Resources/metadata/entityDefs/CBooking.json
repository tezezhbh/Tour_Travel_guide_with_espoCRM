{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "pattern": "$noBadCharacters"
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "bookingDate": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "numberOfPeople": {
            "type": "int",
            "isCustom": true
        },
        "status": {
            "type": "enum",
            "style": [],
            "maxLength": 100,
            "isCustom": true
        },
        "paymentMethod": {
            "type": "enum",
            "style": [],
            "maxLength": 100,
            "isCustom": true
        },
        "notes": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "isCustom": true
        },
        "newStatus": {
            "type": "enum",
            "options": [
                "Pending",
                "Confirmed",
                "Cancelled"
            ],
            "default": "Pending",
            "style": {
                "Pending": null,
                "Confirmed": null,
                "Cancelled": null
            },
            "maxLength": 100,
            "isCustom": true
        },
        "tourPackage": {
            "type": "link"
        },
        "contact": {
            "type": "link"
        },
        "travelAgent": {
            "type": "link"
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "meetings": {
            "type": "hasMany",
            "entity": "Meeting",
            "foreign": "parent"
        },
        "calls": {
            "type": "hasMany",
            "entity": "Call",
            "foreign": "parent"
        },
        "tasks": {
            "type": "hasChildren",
            "entity": "Task",
            "foreign": "parent"
        },
        "emails": {
            "type": "hasChildren",
            "entity": "Email",
            "foreign": "parent",
            "layoutRelationshipsDisabled": true
        },
        "tourPackage": {
            "type": "belongsTo",
            "foreign": "bookings",
            "entity": "CTourPackage",
            "audited": true,
            "isCustom": true
        },
        "contact": {
            "type": "belongsTo",
            "foreign": "cBookings",
            "entity": "Contact",
            "audited": false,
            "isCustom": true
        },
        "travelAgent": {
            "type": "belongsTo",
            "foreign": "bookings",
            "entity": "CTravelAgent",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "optimisticConcurrencyControl": false
}